@model UserToReturnDTO

@{
    ViewData["Title"] = "Delete User";
}

<div class="container d-flex justify-content-center align-items-center min-vh-50">
    <div class="col-md-8 bg-white p-4 rounded shadow-lg">
        <h2 class="text-center text-danger mb-4">
            <i class="fa-solid fa-trash"></i> Delete User
        </h2>

        <div class="alert alert-warning text-center">
            <strong>⚠ Are you sure you want to delete this User?</strong>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-user"></i> UserName:</h5>
                        <p class="text-muted">@Model.UserName</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-envelope"></i> LName:</h5>
                        <p class="text-muted">@Model.LName</p>
                    </div>
                  
                </div>
            </div>
        </div>

        <form asp-controller="User" asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="@Model.Id" />
            <button type="submit" class="btn btn-danger shadow-sm">
                <i class="fa-solid fa-trash-alt"></i> Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="fa-solid fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
