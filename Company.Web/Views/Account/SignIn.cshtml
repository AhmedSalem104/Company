@model Company.Web.DTO.SignInDTO
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center vh-50">



        <div class="col-md-6">
            <!-- فورم التسجيل في منتصف الشاشة -->
            <div class="card shadow-lg p-5 text-center">
                <h3 class="text-center mb-4">Login</h3>

                <form asp-action="SignIn" method="post">
                   
                   

                    <div class="form-group">
                        <input asp-for="Email" class="form-control validation-input" placeholder=" ">
                        <label class="form-label"><i class="fas fa-envelope"></i> Email</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control validation-input" placeholder=" ">
                        <label class="form-label"><i class="fas fa-lock"></i> Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>


                    <div class="form-check mb-3 d-flex align-items-center gap-2">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label class="form-check-label" for="RememberMe">
                            Remember Me
                        </label>
                    </div>
                    <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-user-plus"></i> Sign In
                    </button>
                    </div>
                </form>
                <div class="mt-3">
                    <p> Don`t Have Account? <a asp-action="SignUp"> Create New Account</a></p>

                </div>      
                </div>
        </div>
    </div>
</div>

