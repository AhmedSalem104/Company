@model IEnumerable<RoleToReturnDTO>

@{
    ViewData["Title"] = "Role List";
}

<div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
    <div class="container mt-5 p-4 bg-white rounded shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">
                <i class="fa-solid fa-building" style="color: #007bff;"></i> Roles
            </h1>
            <a asp-controller="Role" asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus"></i> Add New Role
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center shadow-sm">
                    <thead class="table-primary">
                        <tr>                      
                            <th>Id </th>
                            <th> Name</th>
                           
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                
                                <td>
                                    <a asp-controller="Role" asp-action="Details" asp-route-id="@role.Id" class="btn btn-info " title="Details">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-controller="Role" asp-action="Update" asp-route-id="@role.Id" class="btn btn-warning " title="Update">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                   
                                    <a href="#" class="btn btn-danger " title="Delete"
                                       data-id="@role.Id" data-type="Role" onclick="confirmDeleteHandler(this)">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center p-4">
                <i class="fa-solid fa-triangle-exclamation fa-2x text-danger"></i>
                <h3 class="mt-2">No roles Available</h3>
            </div>
        }
    </div>
</div>
<script>
    function confirmDeleteHandler(element) {
        var RoleId = element.getAttribute("data-id");
        var type = element.getAttribute("data-type");
        confirmDelete(RoleId, type);
    }
</script>
<script src="~/js/deleteconfirmation.js"></script>
