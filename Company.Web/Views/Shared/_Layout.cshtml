<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Company.Web.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />


</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-secondary text-white shadow-lg rounded-lg mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand fw-bold text-white d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-building text-white"></i> Company
                </a>

                <!-- Toggler Button -->
                <button class="navbar-toggler border-0 text-white shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars text-white"></i>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house text-warning "></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-solid fa-shield-alt text-warning"></i> Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Department" asp-action="Index">
                                <i class="fa-solid fa-building-columns text-warning"></i> Departments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Employee" asp-action="Index">
                                <i class="fa-solid fa-user-tie text-warning"></i> Employees
                            </a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="User" asp-action="Index">
                                <i class="fa-solid fa-user-tie text-warning"></i> Users
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Role" asp-action="Index">
                                <i class="fa-solid fa-users  text-warning"></i>Roles
                            </a>
                        </li>


                    </ul>
                </div>

                <div class="collapse navbar-collapse justify-content-evenly" id="navbarNav">
                    <ul class="navbar-nav">
                     
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Account" asp-action="SignUp">
                                <i class="fa-solid fa-user-plus text-primary"></i> Register
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200" asp-controller="Account" asp-action="SignIn">
                                <i class="fa-solid fa-sign-in-alt text-primary"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover:text-gray-200 flex items-center gap-2" asp-controller="Account" asp-action="SignOut">
                                <i class="fas fa-sign-out-alt text-danger"></i>
                                <span class="hidden md:inline text-lg font-semibold">تسجيل الخروج</span>

                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-2 shadow-lg">
        <div class="container text-center">
            <p class="mb-0 text-gray-300">
                <i class="fa-solid fa-copyright"></i> 2025 - Company.Web |
                <a asp-controller="Home" asp-action="Privacy" class="text-info text-decoration-none hover:text-blue-400">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("ValidationSection", required: false)
    @RenderSection("Scripts", false)
</body>
</html>
