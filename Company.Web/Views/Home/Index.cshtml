@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold text-primary">مرحبًا بك في نظام إدارة الشركة</h1>
        <p class="lead text-muted">إدارة الموظفين، الأقسام، والتقارير بسهولة واحترافية.</p>
        <a asp-action="Create" asp-controller="Employee" class="btn btn-success btn-lg">
            <i class="fas fa-user-plus"></i> إضافة موظف جديد
        </a>
    </div>

    <!-- قسم الإحصائيات -->
    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card text-white bg-info shadow-sm p-4">
                <div class="card-body">
                    <i class="fas fa-users fa-3x"></i>
                    <h3 class="fw-bold mt-2">150+</h3>
                    <p>عدد الموظفين</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning shadow-sm p-4">
                <div class="card-body">
                    <i class="fas fa-building fa-3x"></i>
                    <h3 class="fw-bold mt-2">10</h3>
                    <p>الأقسام</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success shadow-sm p-4">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x"></i>
                    <h3 class="fw-bold mt-2">50+</h3>
                    <p>المشاريع الجارية</p>
                </div>
            </div>
        </div>
    </div>
</div>
