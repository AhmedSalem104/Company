@model UpdateDepartmentDTO

@{
    ViewData["Title"] = "Update Department";
}

<div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center text-primary mb-4">
                <i class="fa-solid fa-pen-to-square"></i> Update Department
            </h2>

            <form asp-action="Update" method="post">

                @* <input type="hidden" asp-for="Id" /> *@

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label fw-bold">Department Code</label>
                        <input asp-for="Code" class="form-control form-control-lg" placeholder="Enter department code" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Department Name</label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter department name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CreateAt" class="form-label fw-bold">Created At</label>
                    <input asp-for="CreateAt" type="date" class="form-control form-control-lg" required />
                    <span asp-validation-for="CreateAt" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 shadow-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
