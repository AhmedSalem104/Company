@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
    <div class="container mt-5 p-4 bg-white rounded shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary">
                <i class="fa-solid fa-building" style="color: #007bff;"></i> Employees
            </h1>
            <a asp-controller="Employee" asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus"></i> Add New Employee
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center shadow-sm">
                    <thead class="table-primary">
                        <tr>                      
                            <th> Name</th>
                            <th> Age</th>
                            <th> Email</th>
                            <th> Address</th>
                            <th> Phone</th>
                            <th> Salary</th>
                            <th> IsActive</th>
                            <th> IsDeleted</th>
                            <th> @Html.DisplayNameFor(E=>E.HiringDate)</th>
                            <th> @Html.DisplayNameFor(E=>E.CreateAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Employee in Model)
                        {
                            <tr>                              
                              
                                <td>@Employee.Name</td>
                                <td>@Employee.Age</td>
                                <td>@Employee.Email</td>
                                <td>@Employee.Address</td>
                                <td>@Employee.Phone</td>
                                <td>@Employee.Salary</td>
                                <td>@Employee.IsActive</td>
                                <td>@Employee.IsDelete</td>
                                <td>@Employee.HiringDate</td>
                                <td>@Employee.CreateAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-info " title="Details">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Employee.Id" class="btn btn-warning " title="Update">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger " title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                   

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center p-4">
                <i class="fa-solid fa-triangle-exclamation fa-2x text-danger"></i>
                <h3 class="mt-2">No Employees Available</h3>
            </div>
        }
    </div>
</div>
