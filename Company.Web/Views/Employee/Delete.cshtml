@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container d-flex justify-content-center align-items-center min-vh-50">
    <div class="col-md-8 bg-white p-4 rounded shadow-lg">
        <h2 class="text-center text-danger mb-4">
            <i class="fa-solid fa-trash"></i> Delete Employee
        </h2>

        <div class="alert alert-warning text-center">
            <strong>⚠ Are you sure you want to delete this employee?</strong>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-user"></i> Name:</h5>
                        <p class="text-muted">@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-envelope"></i> Email:</h5>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-phone"></i> Phone:</h5>
                        <p class="text-muted">@Model.Phone</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-calendar-check"></i> Hiring Date:</h5>
                        <p class="text-muted">@Model.HiringDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        </div>

        <form asp-controller="Employee" asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="@Model.Id" />
            <button type="submit" class="btn btn-danger shadow-sm">
                <i class="fa-solid fa-trash-alt"></i> Delete
            </button>

            <input asp-for="ImageName" hidden />

            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="fa-solid fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
