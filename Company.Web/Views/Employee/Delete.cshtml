@model DeleteDepartmentDTO

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center text-danger mb-4">
                <i class="fa-solid fa-trash"></i> Delete Department
            </h2>

            <div class="alert alert-warning text-center p-3">
                <strong>Are you sure you want to delete this department?</strong>
            </div>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="fw-bold" style="width: 30%;">Department Code</th>
                        <td>@Model.Code</td>
                    </tr>
                    <tr>
                        <th class="fw-bold">Department Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th class="fw-bold">Created At</th>
                        <td>@Model.CreateAt.ToString("yyyy-MM-dd")</td>
                    </tr>
                </tbody>
            </table>

            <form asp-controller="Department" asp-action="DeleteConfirmed" method="post">
           
                <input type="hidden" asp-for="Id" />

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger btn-lg px-4 shadow-sm">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 shadow-sm ms-3">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
