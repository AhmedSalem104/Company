@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container d-flex justify-content-center align-items-center min-vh-50">
    <div class="col-md-8 bg-white p-4 rounded shadow-lg">
        <h2 class="text-center text-primary mb-4">
            <i class="fa-solid fa-user-tie"></i> Employee Details
        </h2>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-user"></i> Name:</h5>
                        <p class="text-muted">@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-calendar"></i> Age:</h5>
                        <p class="text-muted">@Model.Age</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-envelope"></i> Email:</h5>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-map-marker-alt"></i> Address:</h5>
                        <p class="text-muted">@Model.Address</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-phone"></i> Phone:</h5>
                        <p class="text-muted">@Model.Phone</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-money-bill"></i> Salary:</h5>
                        <p class="text-muted">$@Model.Salary</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-calendar-check"></i> Hiring Date:</h5>
                        <p class="text-muted">@Model.HiringDate.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-calendar-day"></i> Created At:</h5>
                        <p class="text-muted">@Model.CreateAt.ToShortDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-toggle-on"></i> Active:</h5>
                        <p class="fw-bold @(Model.IsActive ? "text-success" : "text-danger")">
                            @((Model.IsActive) ? "Yes" : "No")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-trash"></i> Deleted:</h5>
                        <p class="fw-bold @(Model.IsDelete ? "text-danger" : "text-success")">
                            @((Model.IsDelete) ? "Yes" : "No")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fa-solid fa-building"></i> Department:</h5>
                        <p class="fw-bold @(Model.Department != null ? "text-primary" : "text-warning")">
                            @if (Model.Department != null)
                            {
                                <span>@Model.Department.Name</span>
                            }
                            else
                            {
                                <i class="fa-solid fa-ban text-danger"></i> <span>No Department</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>


        <div class="text-center mt-4">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm">
                <i class="fa-solid fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="fa-solid fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
