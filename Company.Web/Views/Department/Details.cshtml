@model Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container-fluid min-vh-50 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
    <div class="container mt-5 p-4 bg-white rounded shadow-lg">
        <h2 class="text-center text-primary mb-4">
            <i class="fa-solid fa-building"></i> Department Details
        </h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover border text-center shadow-sm">
                <tbody>
                    <tr>
                        <th class="bg-dark text-white">Code</th>
                        <td>@Model.Code</td>
                    </tr>
                    <tr>
                        <th class="bg-dark text-white">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th class="bg-dark text-white">Created At</th>
                        <td>@Model.CreateAt.ToString("yyyy-MM-dd")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-lg shadow-sm">
                <i class="fa-solid fa-pen-to-square"></i>  Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
