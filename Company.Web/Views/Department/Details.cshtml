@model CreateDepartmentDTO

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <h2>Department Details</h2>

    <table class="table table-bordered">
        <tr>
            <th>Code</th>
            <td>@Model.Code</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@Model.CreateAt.ToString("yyyy-MM-dd")</td>
        </tr>
    </table>

    <a href="@Url.Action("Index", "Department")" class="btn btn-primary">Back to List</a>
</div>
