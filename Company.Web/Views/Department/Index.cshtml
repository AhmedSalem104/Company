@model IEnumerable<Department>

@{
    ViewData["Title"] = "Department List";
}

@if(Model.Count() > 0)
{

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Department List</h2>
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Department
            </a>
        </div>

        <br />
        <br />

        <table class="table table-bordered table-striped table-hover">
            <thead class="table">
                <tr class="text-center">
                    <th>#</th>
                    <th>Department Code</th>
                    <th>Department Name</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr class="text-center">
                        <td>@department.Id</td>
                        <td>@department.Code</td>
                        <td>@department.Name</td>
                        <td>@department.CreateAt.ToString("yyyy-MM-dd")</td>
                        <td>

                            <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-info btn-sm">Details</a> |
                            <a asp-controller="Department" asp-action="Update" class="btn btn-warning btn-sm" asp-route-id="@department.Id">Update</a> |
                            <a asp-controller="Department" asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@department.Id">Delete</a>
                         @*    <a href="@Url.Action("Details", "Department", new { id = department.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Update", "Department", new { id = department.Id })" class="btn btn-warning btn-sm">Update</a>
                            <form action="@Url.Action("Delete", "Department", new { id = department.Id })" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                            </form> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>

        <h2 class="alert alert-warning text-center p-4">Department Is Empty </h2>
    </div>
}
