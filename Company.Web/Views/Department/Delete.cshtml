@model DeleteDepartmentDTO

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Delete Department</h2>
    <form asp-action="DeleteConfirmed" method="post">

    <div class="alert alert-warning">
        <p>Are you sure you want to delete this department?</p>
    </div>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th style="width: 20%;">Department Code</th>
                <td>@Model.Code</td>
            </tr>
            <tr>
                <th>Department Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>@Model.CreateAt.ToString("yyyy-MM-dd")</td>
            </tr>
        </tbody>
    </table>

  
        <!-- تضمين Id لضمان حذف القسم الصحيح -->
        <input type="text" asp-for="Id" />

        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
    </form>
</div>
