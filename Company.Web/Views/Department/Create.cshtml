@model CreateDepartmentDTO

@{
    ViewData["Title"] = "Create Department";
}
<div class="container d-flex justify-content-center align-items-center min-vh-50">
    <div class="col-md-6 bg-white p-4 rounded shadow-lg">
        <h2 class="text-center text-primary mb-4">
            <i class="fa-solid fa-building"></i> Create New Department
        </h2>

        <form asp-action="Create" method="post">
           
            <partail name="DepartmentPartialView/_CreateEdit"  />
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>



